{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Assemble",
            "type": "shell",
            "command": "ml.exe",
            "args": [
                "/c",
                "/Zd",
                "/coff",
                "/Fo", "${workspaceFolder}/build/main.obj",
                "${workspaceFolder}/src/main.asm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Assemble the main.asm file"
        },
        {
            "label": "Link",
            "type": "shell",
            "command": "link.exe",
            "args": [
                "/DEBUG",
                "/SUBSYSTEM:CONSOLE",
                "/ENTRY:main@0",
                "/OUT:build/main.exe",
                "build/main.obj"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Assemble",
            "problemMatcher": [],
            "detail": "Link the object file to create an executable"
        }
    ]
}
